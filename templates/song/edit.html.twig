{% extends "base.html.twig" %}

{% block title %}- Modify Song{% endblock %}

{% block h1 %}Modify : <em>{{ song.title }}</em> {% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                {{ form_start(form) }}
                <div class="mb-3">
                    <label for="">Title</label>
                    <div class="text-danger">{{ form_errors(form.title) }}</div>
                    {{ form_widget(form.title, {"attr": {"class" : "form-control"}}) }}
                </div>
                <div class="mb-3">
                    <label for="">Artists name</label>
                    <div class="text-danger">{{ form_errors(form.artists) }}</div>
                    {{ form_widget(form.artists, {"attr": {"class" : "form-control"}}) }}
                </div>
                <div class="mb-3">
                    <label for="">Score / 5</label>
                    <div class="text-danger">{{ form_errors(form.score) }}</div>
                    {{ form_widget(form.score, {"attr": {"class" : "form-control"}}) }}
                </div>
                <div class="mb-3">
                    <input type="submit" class="btn btn-dark" formnovalidate value="Modify">
                </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}